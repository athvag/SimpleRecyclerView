<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/item_students_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_boy_svgrepo_com"/>

        <TextView
            android:id="@+id/item_students_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/item_students_class"
            app:layout_constraintLeft_toRightOf="@id/item_students_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_chainStyle="spread"
            android:text="John Smith"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_students_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_students_name"
            app:layout_constraintLeft_toLeftOf="@id/item_students_name"
            app:layout_constraintRight_toRightOf="@id/item_students_name"
            app:layout_constraintBottom_toTopOf="@id/item_students_birth"
            android:text="2nd Grade"/>

        <TextView
            android:id="@+id/item_students_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_students_class"
            app:layout_constraintLeft_toLeftOf="@id/item_students_class"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/item_students_class"
            android:layout_marginBottom="16dp"
            android:text="Date of Birth: 26/06/1996"
            android:textStyle="italic"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>